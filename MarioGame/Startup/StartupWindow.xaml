<Window x:Class="MarioGame.Startup.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.Startup"
        mc:Ignorable="d"
        Title="StartupWindow" Height="300" Width="500"
        WindowStyle="None" 
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
    
    <Border CornerRadius="30">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="2,1">
                <GradientStop Color="LightSkyBlue" Offset="0"/>
                <GradientStop Color="PaleGreen" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="loading" FontSize="40" FontWeight="Black" Margin="0,0,0,32" HorizontalAlignment="Center"/>
                <ProgressBar Width="300" Height="20" IsIndeterminate="True"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
