<Window x:Class="MarioGame.GameWindows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="Mario"
        MinWidth="1000" MinHeight="600"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStyle="None">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="LightSkyBlue" Offset="0"/>
                <GradientStop Color="PaleGreen" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Canvas Name="GameCanvas" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Canvas>
        <Button Name="MenuButton"
                Content="☰"
                Background="Plum"
                Width="50"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Focusable="False"
                Margin="10"
                FontSize="24"
                Click="MenuButton_Click" />
        
        <StackPanel Name="GameInfoPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="50"
                    Margin="0,10,0,0">
            <TextBlock Name="ScoreText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White"/>
            <TextBlock Name="LevelText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Margin="50,0"/>
            <TextBlock Name="TimeText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White"/>
        </StackPanel>
        
        <StackPanel Name="LivesPanel"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="70,10,10,0"
                Height="50">
        </StackPanel>
    </Grid>
</Window>
