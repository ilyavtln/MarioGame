<Window x:Class="MarioGame.GameWindows.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="Mario" Height="600" Width="1000"
        MinWidth="600" MinHeight="600"
        WindowState="Maximized">
    <Grid>
        <Canvas Name="GameCanvas" Background="LightBlue" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"></Canvas>
        <Button Name="MenuButton"
                Content="☰"
                Background="Plum"
                Width="50"
                Height="50"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10"
                FontSize="24"
                Click="MenuButton_Click" />
        
        <StackPanel Name="GameInfoPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Height="50"
                    Margin="0,10,0,0">
            <TextBlock Name="ScoreText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Margin="20,0"/>
            <TextBlock Name="LevelText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Margin="20,0"/>
            <TextBlock Name="TimeText" VerticalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="White" Margin="20,0"/>
        </StackPanel>
        
        <StackPanel Name="LivesPanel"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="70,10,10,0"
                Height="50">
        </StackPanel>
    </Grid>
</Window>
