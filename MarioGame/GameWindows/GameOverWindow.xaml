<Window x:Class="MarioGame.GameWindows.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="GameOverWindow" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Border Background="Lavender" BorderBrush="DarkSlateBlue" BorderThickness="2" CornerRadius="20">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 30">
                <TextBlock Foreground="Violet" TextAlignment="Center" FontSize="40" FontWeight="Bold" Margin="0, 10">game over</TextBlock>
                <TextBlock Name="ScoreText" TextAlignment="Center" FontSize="20" Margin="0, 20"></TextBlock>
                <Button Content="restart" Width="200" Height="50" Margin="0, 10" Click="Restart_Click" />
                <Button Content="exit" Width="200" Height="50" Margin="0, 10" Click="Exit_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>