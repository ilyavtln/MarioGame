<Window x:Class="MarioGame.GameWindows.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="GameOverWindow" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock TextAlignment="Center" FontSize="20" FontWeight="Medium">Game Over!</TextBlock>
            <Button Content="Restart" Margin="0, 10" Width="200" Height="50" Click="Restart_Click" />
        </StackPanel>
    </Grid>
</Window>
