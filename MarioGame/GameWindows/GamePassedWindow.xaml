<Window x:Class="MarioGame.GameWindows.GamePassedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="GamePassedWindow" Width="500" Height="300"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="Lavender" CornerRadius="30">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0, 0, 0, 30">
                <TextBlock Foreground="MediumSlateBlue" TextAlignment="Center" FontSize="64" FontWeight="Bold" Margin="0, 0, 0, 30">game passed!</TextBlock>
                <TextBlock x:Name="ScoreText" Foreground="DodgerBlue" TextAlignment="Center" FontSize="28" FontWeight="Medium" Margin="0, 0, 0, 25"/>
                <TextBlock x:Name="CountdownText" Foreground="DodgerBlue" TextAlignment="Center" FontSize="20" FontWeight="Normal" Margin="0, 0, 0, 20"/>
                <Button Content="exit" Width="300" Height="50" Margin="10, 10" Click="Exit_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>