<Window x:Class="MarioGame.GameWindows.PauseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MarioGame.GameWindows"
        mc:Ignorable="d"
        Title="Pause Menu" Width="300" Height="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Lavender">
    <Grid>
        <!-- Первый StackPanel для кнопок паузы -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Button Content="Resume" Margin="0, 10" Width="200" Height="50" Click="Resume_Click" />
            <Button Content="Restart" Margin="0, 10" Width="200" Height="50" Click="Restart_Click" />
            <Button Content="Select level" Margin="0, 10" Width="200" Height="50" Click="SelectLevel_Click" />
            <Button Content="Exit" Margin="0, 10" Width="200" Height="50" Click="Exit_Click" />
        </StackPanel>

        <!-- Второй StackPanel для выбора уровней (по умолчанию скрыт) -->
        <StackPanel x:Name="LevelSelectionPanel" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20" Visibility="Collapsed">
            <Button Content="Level 1" Tag="1" Width="200" Height="50" Margin="0, 10" Click="LevelButton_Click"/>
            <Button Content="Level 2" Tag="2" Width="200" Height="50" Margin="0, 10" Click="LevelButton_Click"/>
            <Button Content="Level 3" Tag="3" Width="200" Height="50" Margin="0, 10" Click="LevelButton_Click"/>
            <Button Content="Back" Width="200" Height="50" Margin="0, 10" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
